@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
    //Layout = "_LayoutInformationStaff";
}

<h4>@ViewData["Title"]</h4>
<partial name="_StatusMessage" model="Model.StatusMessage" />
<div class="row">
    <div class="col-md-6">
        <form id="profile-form" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Username"></label>
                <input type="file" id="uploadedAva" name="uploadedAva" class="buttonUpload col-3">
            </div>
            <div class="form-group">
                <label asp-for="Username"></label>
                <input asp-for="Username" class="form-control" disabled />
            </div>
            <div class="form-group">
                <label asp-for="Input.PhoneNumber"></label>
                <input asp-for="Input.PhoneNumber" class="form-control" />
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label>Full Name</label>
                <input class="form-control" 
                       name="Fullname"
                       type="text" placeholder="Enter your full name" required
                       asp-for="Fullname"/>
                <span asp-validation-for="Fullname" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label>Date of birth</label>
                <input class="form-control"
                       name="Dob"
                       type="date" placeholder="Enter your birthday"
                       asp-for="DoB" />
                @*<span asp-validation-for="" class="text-danger"></span>*@
            </div>

            <div class="form-group">
                <label>Gender</label>
                <div class="gender-option">
                    <div class="gender">
                        <input id="male" type="radio" name="Gender" asp-for="Gender" value="Male"/>
                        <label for="check-male">Male</label>
                    </div>
                    <div class="gender">
                        <input id="female" type="radio" name="Gender" asp-for="Gender" value="Female"/>
                        <label for="check-female">Female</label>
                    </div>
                </div>
                @*<span asp-validation-for="" class="text-danger"></span>*@
            </div>

            <div class="form-group">
                <label>Address</label>
                <input class="form-control"
                       name="Address"
                       type="text" placeholder="Enter your address"
                       asp-for="Address" />
                @*<span asp-validation-for="" class="text-danger"></span>*@
            </div>

            <button id="update-profile-button" type="submit" class="btn btn-primary">Save</button>
        </form>

