@*@model IEnumerable<COMP1640.Models.Tag> ;*@
@model List<Tag>;
@{
    Layout = "_LayoutCreateAccount";
}


<div class="container col-md-6 mt-3 text-center">
    <h2 class="text text-success mb-3">Add a new account</h2>
    <form enctype="multipart/form-data" asp-action="AddIdea" asp-controller="Staff">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label class="control-label">Title</label>
            <input type="text" name="title" class="form-control" />

        </div>
        <div class="form-group">
            <label class="control-label">Content</label>
            <input type="text" name="content" class="form-control" />
        </div>
        <div class="form-group">
            <label class="control-label">Tag</label>
            <select name="tagName" class="form-control">
                @foreach (var t in Model)
                {
                    <option value="@t.tag_name">@t.tag_name</option>
                }
            </select>
        </div>
        <div class="form-group">
            <label class="control-label">Tag</label>
            <a asp-action="AddFile" asp-controller="Document">Upload Files</a>
        </div>

        <div class="form-group">
            <label class="control-label">Title</label>
            <input type="checkbox" name="isAnonymous" value="true" class="form-control" />
        </div>
        <div class="form-group">
            <input type="submit" value="Post" class="btn btn-success" />
        </div>
    </form>

</div>
