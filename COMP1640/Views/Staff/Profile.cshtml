                $(`#TD-${IdeaId}`).removeClass("fa-solid");
                $(`#TD-${IdeaId}`).addClass("fa-regular");
                var obj = {
                    ReactPointId: ReactPointId,
                    ThumbUp: ThumbUp - 1,
                    ThumbDown: ThumbDown
                };
                Submit(obj);
                Delete(save);
            }
        @*Lock 2*@
                            else if ($(`#TD-${IdeaId}`).hasClass("fa-solid") == true && theLock == "fa-solid") {
                $(`#TD-${IdeaId}`).removeClass("fa-solid");
                $(`#TD-${IdeaId}`).addClass("fa-regular");
                var obj = {
                    ReactPointId: ReactPointId,
                    ThumbUp: ThumbUp,
                    ThumbDown: ThumbDown - 1
                };
                Submit(obj);
                Delete(save);
            }
            else if ($(`#TD-${IdeaId}`).hasClass("fa-solid") == false && theLock == "fa-solid") {
                $(`#TD-${IdeaId}`).removeClass("fa-regular");
                $(`#TD-${IdeaId}`).addClass("fa-solid");
                var obj = {
                    ReactPointId: ReactPointId,
                    ThumbUp: ThumbUp,
                    ThumbDown: ThumbDown
                };
                Submit(obj);
                Save(save);
            }
        @*Lock 0*@
                            else if ($(`#TD-${IdeaId}`).hasClass("fa-solid") == false && theLock == "") {
                $(`#TD-${IdeaId}`).removeClass("fa-regular");
                $(`#TD-${IdeaId}`).addClass("fa-solid");
                var obj = {
                    ReactPointId: ReactPointId,
                    ThumbUp: ThumbUp,
