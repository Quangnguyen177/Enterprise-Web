@{
    Layout = "_Staff";
}
@if (User.Identity.IsAuthenticated && User.IsInRole("Staff"))
{
    <style>
        .profile {
            /*   padding: 0em;
                                            margin: 0em;*/
            display: block;
            justify-content: center;
            width: 100%;
            padding-left: 4em;
            padding-right: 4em;
        }

        .row merged20 {
            transform: translate(2em, 2em);
        }

        .file_idea img {
            text-align: center;
            margin-left: 2em;
        }

        .header_pro {
            height: 30.25em;
            width: 100%;
            display: inherit;
            justify-content: center;
        }

        .cover_img {
            width: 100%;
            height: 30em;
            transform: translateY(-3em);
        }

        .avata_profile {
            transform: translate(6em, -16.3em);
        }

            .avata_profile img {
                width: 13em;
                height: 13em;
                border-radius: 50%;
            }

        .drop_down {
            transform: translate(-1em, -4em);
        }

        .users-thumb-list {
            float: left;
            text-align: center;
            width: 100%;
            transform: translate(13em, -10em);
            display: flex;
        }

            .users-thumb-list > a img {
                border: 2px solid #fff;
                border-radius: 50%;
                width: 3em;
                height: 3em;
                display: inline-block;
            }

        .section {
            transform: translate(-4em, -23.3em);
        }

        .widget {
            display: block;
            background-color: var(--text-color);
            height: auto;
            width: auto;
            border-radius: 7px;
        }

        .idea {
            display: block;
            background-color: var(--text-color);
            height: auto;
            width: auto;
            border-radius: 7px;
            position: static;
        }

        /*.sub_container.col-lg-3 {
                                            transform: translateX(4em);
                                        }

                                        .sub_container2.col-lg-3 {
                                            transform: translateX(4em);
                                        }

                                        .sub_container.col-lg-6 {
                                            transform: translateX(3em);
                                            width: auto;
                                        }*/
        .Shortcuts {
            width: auto;
        }

        .widget h4 {
            font-size: 1.8em;
        }

        .wall {
            font-size: 1.2em;
            text-align: center;
            margin: 0.5em 0.5em;
        }

        .name_profile {
            transform: translate(14em, -10.4em);
        }

            .name_profile h4 {
                color: white;
                font-weight: 600;
                /* transform: translate(7em, -4em); */
                font-size: 2em;
                text-decoration: none;
            }

        aside img {
            width: 23em;
            height: 23em;
        }

        .title {
            font-size: 1.4em;
            display: inline-block;
            width: auto;
            color: white;
            text-align: center;
            /* transition: revert; */
            transform: translate(10em, -7.5em);
            /* margin-bottom: 1em; */
        }

        .appear_idea {
            display: flex;
            transform: translate(-33.7em, 7em);
            /* width: 30em;*/
        }

        .ap_idea_avata {
            display: inline-block;
        }

        .info_comment {
            display: inline-block;
            transform: translate(2em, -0.7em);
        }

        .content_post {
            width: 30.3em;
        }

        .row.merged20 {
            padding-left: 4.5em;
        }
        .pagination
        {
            margin-top: 2em;
            padding-top: 0.1em;
        }
    </style>
    <div class="profile">
        <div class="header_pro">
            <img class="cover_img" src="/images/anhbia.jpg" alt="cover image">
            <div class="avata_profile">
                <figure>
                    <img src="/images/avatar.jpg"
                     alt="avata" />
                </figure>
                <div class="name_profile">
                    <h4>Minh Lưu Thị</h4>
                </div>
                <a class="title" href="" title="weekly-likes">Friend..</a>
                <div class="users-thumb-list">
                    <a href="#" title="Anderw" data-toggle="tooltip">
                        <img src="/images/ffm1.jpeg" alt="friend1">
                    </a>
                    <a href="#" title="frank" data-toggle="tooltip">
                        <img src="/images/ffm2.jpeg" alt="friend2">
                    </a>
                    <a href="#" title="Sara" data-toggle="tooltip">
                        <img src="/images/fm1.jpeg" alt="friend3">
                    </a>
                    <a href="#" title="Amy" data-toggle="tooltip">
                        <img src="/images/ffm3.jpeg" alt="friend4">
                    </a>
                    <a href="#" title="Ema" data-toggle="tooltip">
                        <img src="/images/fm2.jpeg" alt="friend5">
                    </a>
                    <a href="#" title="Sophie" data-toggle="tooltip">
                        <img src="/images/fm3.jpeg" alt="friend6">
                    </a>
                    <a href="#" title="Maria" data-toggle="tooltip">
                        <img src="/images/fl1.jpg" alt="friend7">
                    </a>
                </div>
            </div>
        </div>
        <div class="section">
            <div class="col-lg-12">
                <div class="row merged20" id="page-contents">
                    <div class="sub_container col-lg-3">
                        <div class="sidebar static">
                            <div class="widget">
                                <h4 class="widget-title"><b> Information</b></h4>
                                <div class="wall">
                                    <span>Wellcome to my wall &nbsp<i style="color: #d391b2" class="fa-regular fa-face-smile-wink"></i></span>
                                </div>
                                <ul class="Shortcuts">
                                    <li class="nav_bar--item "><i class="fa-solid fa-street-view"></i>Works at: Greenwich Viet Nam</li>
                                    <li class="nav_bar--item "><i class="fa-solid fa-transgender"></i>Gender: Nữ</li>
                                    <li class="nav_bar--item "><i class="fa-solid fa-phone-volume"></i>Phone: 0398677630</li>
                                    <li class="nav_bar--item "><i class="fa-solid fa-envelope-open-text"></i>Email: minh123@gmail.com</li>
                                </ul>
                            </div>
                            <br>
                            <div class="idea">
                                <h4 class="widget-title"><b>Most Popular Ideas</b></h4>
                                <ul class="Shortcuts">
                                    <li class="nav_bar--item "><i class="fa-solid fa-street-view"></i><a asp-action="Index" asp-controller="Home">Most Viewed Ideas</a></li>
                                    <li class="nav_bar--item "><i class="fa-solid fa-face-laugh-wink"></i><a asp-action="Index" asp-controller="Home">Most Emotion ideas</a></li>
                                    <li class="nav_bar--item "><i class="fa-regular fa-lightbulb"></i><a asp-action="" asp-controller="">Latest Ideas</a></li>
                                    <li class="nav_bar--item "><i class="fa-regular fa-comments"></i><a asp-action="PostIdea" asp-controller="Home">Latest Comments</a></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                    @*        <div class="new_idea">
                <div class="post">*@
                    <div class="sub_container col-lg-6">
                        <div class="new-post">
                            <div class="avata_post">
                                <figure>
                                    @*AVATAR*@
                                    <a style="text-decoration: none" asp-action="Profile" asp-controller="Staff">
                                        <img src="/images/avatar.jpg"
                                         alt="avata" />
                                    </a>
                                </figure>
                            </div>
                            <div class="form_add_idea">
                                <a style="text-decoration: none; width: 100%" asp-action="AddIdea" asp-controller="Staff">
                                    <input class="form-control" type="text" placeholder="Readonly input here" readonly>
                                    <button type="button" class="btn btn-success">Add</button>
                                </a>
                            </div>
                        </div>

                        @*A post*@
                        <div class="block">
                            <div class="information_idea">
                                <div class="Infor_idea">
                                    <div class="detail_idea nav_bar--item--separate2">
                                        <div class="avata_information_idea">
                                            <figure>
                                                <a style="text-decoration: none" asp-action="Profile" asp-controller="Staff">
                                                    <img style="width: 60px; height: 60px; border-radius: 50%; display: inline-block" src="/images/avatar.jpg" alt="avatar" />

                                                    <div class="name_account">

                                                        <h4 style="font-size: 16px">Minh Luu Thi</h4>
                                                        <h5 style="font-size: 14px;padding-top: -600px; color: black; margin-left: 70px;">3/17/2023</h5>   @*CreatedTime*@
                                                    </div>
                                                </a>
                                            </figure>
                                        </div>

                                        <div class="content">

                                            <div class="img_idea">
                                                <div class="title_idea">
                                                    <div class="tag">
                                                        <a asp-action="" asp-controller="">
                                                            <span>Category_name</span>     @*Category*@
                                                        </a>
                                                    </div>
                                                    <a asp-action="DetailIdea" asp-controller="Staff" asp-route-id="" style="text-decoration:none; color: black;">
                                                        <h1 class="lead" style="font-size: 1.3em">idea_title</h1>    @*Title*@
                                                    </a>
                                                </div>

                                                <div class="file_idea ">
                                                    <a asp-action="DetailIdea" asp-controller="Staff" asp-route-id="" style="text-decoration:none; color: black;">
                                                        <h2 class="content_post">idea_content</h2>
                                                    </a> @*Content*@
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="felling  nav_bar--item--separate3">
                                        <div class="more">
                                            <ul class="felling_idea">
                                                <li><a style="color:green" asp-action="" asp-controller=""><i class="fa-regular fa-eye"></i></a></li>
                                                @*  <li>
                                            <label placeholder="React point: "><p id="total">@react_point</p></label>
                                            </li>*@
                                                <li>
                                                    <i type="button" onclick="btnThumbUp(this)" class="fa-regular fa-thumbs-up" style="color: green"></i>
                                                </li>

                                                <li>
                                                    <i type="button" onclick="btnThumbDown(this)" class="fa-regular fa-thumbs-down" style="color:green"></i>
                                                </li>
                                                <li><a style="color:green" asp-action="" asp-controller=""><i class="fa-regular fa-comment"></i></a>32</li>
                                            </ul>
                                        </div>
                                    </div>

                                    <div class="comment_idea">
                                        <div class="com_idea_avata">
                                            <a asp-action="Profile" asp-controller="Staff">
                                                <figure class="avata_comment">
                                                    <img style="width: 60px; height: 60px; border-radius: 50%; display: inline-block" src="/images/avatar.jpg"
                                                     alt="avata" />
                                                </figure>
                                            </a>
                                        </div>
                                        <div class="comment" style=" position: static; z-index: 5;">
                                            <div class="form-group">

                                                <a asp-action="DetailIdea" asp-controller="Staff" asp-route-id="IdeaId" style="text-decoration: none">
                                                    <input style="height: 40px" class="form-control" rows="5" id="comment" placeholder="Post your comment..." />
                                                </a>
                                            </div>
                                        </div>
                                    </div>

                                    @*END*@
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="sub_container2 col-lg-3">
                        <div class="advertisement1">
                            <img src="https://inspirdoedu.com/vnt_upload/abroad/05_2020/du-hoc-anh-dai-hoc-greenwich.jpg" title="QC" />
                        </div>
                        <br>
                        <div class="advertisement2">
                            <img src="https://media.kenhtuyensinh.vn/images/article/240123/daihocgreenwich.jpg"
                             title="QC" />
                        </div>
                        <div class="advertisement3">
                            <img src="https://vtv1.mediacdn.vn/thumb_w/640/2022/5/28/6-16537503950961937725457.jpg"
                             title="QC" />
                        </div>
                    </div>
                </div>
                <div class="pagination" style=" border-radius: 3em">

                    <div class="prev">
                        <span class="text" onclick="BtnPre()">Prev</span>
                    @*    <div class="left">*@
                    @*    </div>*@
                    </div>

                    <div class="next">
                        <span class="text" id="BtnNext" onclick="BtnNext()">Next</span>
                     @*   <div class="right">*@
                        @*</div>*@
                    </div>
                </div>
            </div>
        </div>
    </div>
}
