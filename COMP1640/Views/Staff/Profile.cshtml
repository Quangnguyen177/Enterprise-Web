                IdeaId: IdeaId,
                ProfileId: "@logginnedUser.Id",
                Reacted: false
            };
            $(`#TU-${IdeaId}`).removeClass("fa-solid");
            $(`#TU-${IdeaId}`).addClass("fa-regular");
        @*Lock #1*@
                            if ($(`#TD-${IdeaId}`).hasClass("fa-solid") == false && theLock == "fa-regular") {
                $(`#TD-${IdeaId}`).removeClass("fa-regular");
                $(`#TD-${IdeaId}`).addClass("fa-solid");
                var obj = {
                    ReactPointId: ReactPointId,
                    ThumbUp: ThumbUp - 1,
