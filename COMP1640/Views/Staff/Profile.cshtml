                $(`#TU-${IdeaId}`).addClass("fa-regular");
                var obj = {
                    ReactPointId: ReactPointId,
                    ThumbUp: ThumbUp,
                    ThumbDown: ThumbDown
                };
                Submit(obj);
                Delete(save);
            }
        };

