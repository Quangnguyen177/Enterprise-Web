@model COMP1640.Models.Profile
@{
    Layout = "_Staff";
    <link rel="stylesheet" href="~/css/profile.css" />
    Profile logginnedUser = (Profile)ViewBag.LogginedUser;
    var ideas = ViewBag.Ideas as List<Idea>;
}
@if (User.Identity.IsAuthenticated && User.IsInRole("Staff"))
{
    <div class="profile">
        <div class="header_pro">
            
             <div class="cover_img">
                <div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="carousel">
                    <div class="carousel-indicators">
                        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
                        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1" aria-label="Slide 2"></button>
                        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2" aria-label="Slide 3"></button>
                    </div>
                    <div class="carousel-inner">
                        <div class="carousel-item active">
                            <img src="/images/theme1.jpg" class="d-block w-100" alt="...">
                        </div>
                        <div class="carousel-item">
                            <img src="~/images/theme2.jpg" class="d-block w-100" alt="...">
                        </div>
                        <div class="carousel-item">
                            <img src="/images/theme3.jpg" class="d-block w-100" alt="...">
                        </div>
                    </div>
                    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Previous</span>
                    </button>
                    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Next</span>
                    </button>
                </div>
            </div>
            
            <div class="avata_profile">
                <div class="avatar">
                    <figure>
                        <img src="/Avatars/@Model.Avatar"
                             alt="avata" />
                    </figure>
                </div>
                <div class="infor_account">
                    <div class="name_profile">
                        <h4>@Model.Name</h4>
                    </div>
                    <a class="title" href="" title="weekly-likes">Friend..</a>
                    <div class="users-thumb-list">
                        <a href="#" title="Anderw" data-toggle="tooltip">
                            <img src="/images/ffm1.jpeg" alt="friend1">
                        </a>
                        <a href="#" title="frank" data-toggle="tooltip">
                            <img src="/images/ffm2.jpeg" alt="friend2">
                        </a>
                        <a href="#" title="Sara" data-toggle="tooltip">
                            <img src="/images/fm1.jpeg" alt="friend3">
                        </a>
                        <a href="#" title="Amy" data-toggle="tooltip">
                            <img src="/images/ffm3.jpeg" alt="friend4">
                        </a>
                        <a href="#" title="Ema" data-toggle="tooltip">
                            <img src="/images/fm2.jpeg" alt="friend5">
                        </a>
                        <a href="#" title="Sophie" data-toggle="tooltip">
                            <img src="/images/fm3.jpeg" alt="friend6">
                        </a>
                        <a href="#" title="Maria" data-toggle="tooltip">
                            <img src="/images/fl1.jpg" alt="friend7">
                        </a>
                    </div>
                </div>
            </div>
        </div>
        <div class="section">
            <div class="col-lg-12">
                <div class="row merged20" id="page-contents">
                    <div class="sub_container col-lg-3">
                        <div class="sidebar static">
                            <div class="widget">
                                <h4 class="widget-title"><b> Information</b></h4>
                                <div class="wall">
                                    <span>Wellcome to my wall &nbsp<i style="color: #d391b2" class="fa-regular fa-face-smile-wink"></i></span>
                                </div>
                                <ul class="Shortcuts">
                                    <li class="nav_bar--item "><i class="fa-solid fa-street-view"></i>Address: @Model.Address</li>
                                    <li class="nav_bar--item "><i class="fa-solid fa-transgender"></i>Gender: @Model.Gender</li>
                                    <li class="nav_bar--item "><i class="fa-solid fa-phone-volume"></i>Phone: @Model.PhoneNumber</li>
                                    <li class="nav_bar--item "><i class="fa-solid fa-envelope-open-text"></i>Email: @Model.Email</li>
                                    <li class="nav_bar--item "><i class="fa-solid fa-envelope-open-text"></i>Department: @Model.Department.Dep_name</li>
                                </ul>
                            </div>
                            <br>
                            <div class="idea">
                                <h4 class="widget-title"><b>Most Popular Ideas</b></h4>
                                <ul class="Shortcuts">
                                    <li class="nav_bar--item "><i class="fa-solid fa-street-view"></i><a href="/Staff/Profile?id=@Model.Id&pagenum=1&viewtype=mostview">Most Viewed Ideas</a></li>
                                    <li class="nav_bar--item "><i class="fa-solid fa-face-laugh-wink"></i><a href="/Staff/Profile?id=@Model.Id&pagenum=1&viewtype=popular">Most Popular ideas</a></li>
                                    <li class="nav_bar--item "><i class="fa-regular fa-lightbulb"></i><a href="/Staff/Profile?id=@Model.Id&pagenum=1&viewtype=latest">Latest Ideas</a></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                    @*        <div class="new_idea">
                <div class="post">*@

                    <div class="sub_container col-lg-6">
                        @if (logginnedUser.Id.Equals(Model.Id))
                        {
                            <div class="new-post">
                                <div class="avata_post">
                                    <figure>
                                        @*AVATAR*@
                                        <a style="text-decoration: none" href="/Staff/Profile?id=@logginnedUser.Id&pagenum=1&viewtype=latest">
                                            <img src="/Avatars/@logginnedUser.Avatar"
                                                 alt="avata" />
                                        </a>
                                    </figure>
                                </div>
                                <div class="form_add_idea">
                                    <a style="text-decoration: none; width: 100%" asp-action="AddIdea" asp-controller="Staff">
                                        <input class="form_control" type="text" placeholder="Readonly input here" readonly>
                                    </a>
                                </div>
                                <div class="btn_add">
                                    <a style="text-decoration: none; width: 100%" asp-action="AddIdea" asp-controller="Staff">
                                        <button type="button" class="btn btn-success">Add</button>
                                    </a>
                                </div>
                            </div>
                        }


                        @*A post*@
                        <div class="block">
                            @foreach (var idea in ideas)
                            {
                                <div class="information_idea">
                                    <div class="Infor_idea">
                                        <div class="detail_idea nav_bar--item--separate2">
                                            <div class="avata_information_idea">
                                                <figure>
                                                    <a style="text-decoration: none" href="/Staff/Profile?id=@idea.Profile.Id&pagenum=1&viewtype=latest">
                                                        <img style="width: 60px; height: 60px; border-radius: 50%; display: inline-block" src="/Avatars/@idea.Profile.Avatar" alt="avatar" />

                                                        <div class="name_account">

                                                            <h4 style="font-size: 16px">@idea.Profile.Name</h4>
                                                            <h5 style="font-size: 14px;padding-top: -600px; color: black; margin-left: 70px;">@idea.created_date</h5>   @*CreatedTime*@
                                                        </div>
                                                    </a>
                                                </figure>
                                            </div>

                                            <div class="content">

                                                <div class="img_idea">
                                                    <div class="title_idea">
                                                        <div class="tag">
                                                            <a asp-action="" asp-controller="">
                                                                <span>@idea.Category.category_name</span>     @*Category*@
                                                            </a>
                                                        </div>
                                                        <a asp-action="DetailIdea" asp-controller="Staff" asp-route-id="@idea.IdeaId" style="text-decoration:none; color: black;">
                                                            <h1 class="lead" style="font-size: 1.3em">@idea.idea_title</h1>    @*Title*@
                                                        </a>
                                                    </div>
                                                    @foreach (var doc in ViewBag.Documents)
                                                    {
                                                        if (doc.IdeaId == idea.IdeaId)
                                                        {
                                                            <div class="file_idea" style="text-align: center">
                                                                <a asp-action="" asp-controller="" asp-route-id="@doc.DocId">
                                                                    @doc.doc_name
                                                                </a>

                                                            </div>
                                                        }

                                                    }

                                                    <div class="file_idea ">
                                                        <a asp-action="DetailIdea" asp-controller="Staff" asp-route-id="@idea.IdeaId" style="text-decoration:none; color: black;">
                                                            <h2 class="content_post">@idea.idea_content</h2>
                                                        </a> @*Content*@
                                                    </div>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="felling  nav_bar--item--separate3">
                                            <div class="more">
                                                <ul class="felling_idea">
                                                    <li><a style="color:green" asp-action="" asp-controller=""><i class="fa-regular fa-eye"></i></a>@idea.idea_view</li>
                                                    <li>
                                                        <label placeholder="React point: "><p id="total">#</p></label>
                                                    </li>
                                                    <li>
                                                        <i type="button" onclick="btnThumbUp(this)" class="fa-regular fa-thumbs-up" style="color: green"></i>
                                                    </li>

                                                    <li>
                                                        <i type="button" onclick="btnThumbDown(this)" class="fa-regular fa-thumbs-down" style="color:green"></i>
                                                    </li>
                                                    <li>
                                                        <a style="color:green" asp-action="" asp-controller="">
                                                            <i class="fa-regular fa-comment"></i>
                                                        </a>
                                                        @idea.Comments.Count()
                                                    </li>
                                                </ul>
                                            </div>
                                        </div>

                                        <div class="comment_idea">
                                            <div class="com_idea_avata">
                                                <a href="/Staff/Profile?id=@logginnedUser.Id&pagenum=1&viewtype=latest">
                                                    <figure class="avata_comment">
                                                        <img style="width: 60px; height: 60px; border-radius: 50%; display: inline-block" src="/Avatars/@ViewBag.logginedUser.Avatar"
                                                             alt="avata" />
                                                    </figure>
                                                </a>
                                            </div>
                                            <div class="comment" style=" position: static; z-index: 5;">
                                                <div class="form-group">

                                                    <a asp-action="DetailIdea" asp-controller="Staff" asp-route-id="IdeaId" style="text-decoration: none">
                                                        <input style="height: 40px" class="form-control" rows="5" id="comment" placeholder="Post your comment..." />
                                                    </a>
                                                </div>
                                            </div>
                                        </div>

                                        @*END*@
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                    <div class="sub_container2 col-lg-3">
                        <div class="advertisement1">
                            <img src="https://inspirdoedu.com/vnt_upload/abroad/05_2020/du-hoc-anh-dai-hoc-greenwich.jpg" title="QC" />
                        </div>
                        <br>
                        <div class="advertisement2">
                            <img src="https://media.kenhtuyensinh.vn/images/article/240123/daihocgreenwich.jpg"
                                 title="QC" />
                        </div>
                        <div class="advertisement3">
                            <img src="https://vtv1.mediacdn.vn/thumb_w/640/2022/5/28/6-16537503950961937725457.jpg"
                                 title="QC" />
                        </div>
                    </div>
                </div>
                @{
                    int next = int.Parse(@ViewBag.PageNum.ToString()) + 1;
                    int pre = int.Parse(@ViewBag.PageNum.ToString()) - 1;
                    var viewType = @ViewBag.ViewType;
                }
                <div class="paginations" style=" border-radius: 3em">
                    @if (pre > 0)
                    {
                        <div class="prev">
                            <span class="text" onclick="BtnPre()">Prev</span>
                        </div>
                    }
                    @if (next * 5 - ViewBag.Total < 5)
                    {
                        <div class="next">
                            <span class="text" id="BtnNext" onclick="BtnNext()">Next</span>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
    <script>
        function BtnNext() {
            window.location.replace('/Staff/Profile?id=@Model.Id&pageNum=@next&viewType=@viewType');
        }
        function BtnPre() {
            window.location.replace('/Staff/Profile?id=@Model.Id&pageNum=@pre&viewType=@viewType');
        }
    </script>
}
