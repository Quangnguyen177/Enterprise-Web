        function BtnNext() {
            window.location.replace('/Staff/Profile?id=@pro.Id&pageNum=@next&viewType=@viewType');
        }
        function BtnPre() {
            window.location.replace('/Staff/Profile?id=@pro.Id&pageNum=@pre&viewType=@viewType');
        }
    </script>
    <script type="text/javascript">
        function btnThumbUp(IdeaId, ReactPointId, ThumbUp, ThumbDown, theLock) {
            var save = {
                IdeaId: IdeaId,
                ProfileId: "@logginnedUser.Id",
                Reacted: true
            };
            $(`#TD-${IdeaId}`).removeClass("fa-solid");
            $(`#TD-${IdeaId}`).addClass("fa-regular");
        @*Lock #1*@
                            if ($(`#TU-${IdeaId}`).hasClass("fa-solid") == true && theLock == "fa-solid") {
                $(`#TU-${IdeaId}`).removeClass("fa-solid");
                $(`#TU-${IdeaId}`).addClass("fa-regular");
                var obj = {
                    ReactPointId: ReactPointId,
                    ThumbUp: ThumbUp - 1,
                    ThumbDown: ThumbDown
                };
                Submit(obj);
                Delete(save);
            }
            else if ($(`#TU-${IdeaId}`).hasClass("fa-solid") == false && theLock == "fa-solid") {
                $(`#TU-${IdeaId}`).removeClass("fa-regular");
                $(`#TU-${IdeaId}`).addClass("fa-solid");
                var obj = {
                    ReactPointId: ReactPointId,
                    ThumbUp: ThumbUp,
                    ThumbDown: ThumbDown
                };
                Submit(obj);
                Save(save);
            }
        @*Lock #2*@
                            else if ($(`#TU-${IdeaId}`).hasClass("fa-solid") == false && theLock == "fa-regular") {
                $(`#TU-${IdeaId}`).removeClass("fa-regular");
                $(`#TU-${IdeaId}`).addClass("fa-solid");
                var obj = {
                    ReactPointId: ReactPointId,
                    ThumbUp: ThumbUp + 1,
                    ThumbDown: ThumbDown - 1
                };
                Submit(obj);
                Save(save);
            }
            else if ($(`#TU-${IdeaId}`).hasClass("fa-solid") == true && theLock == "fa-regular") {
                $(`#TU-${IdeaId}`).removeClass("fa-solid");
                $(`#TU-${IdeaId}`).addClass("fa-regular");
                var obj = {
                    ReactPointId: ReactPointId,
                    ThumbUp: ThumbUp,
                    ThumbDown: ThumbDown - 1
                };
                Submit(obj);
                Delete(save);
            }
        @*Lock 0*@
                            else if ($(`#TU-${IdeaId}`).hasClass("fa-solid") == false && theLock == "") {
                $(`#TU-${IdeaId}`).removeClass("fa-regular");
                $(`#TU-${IdeaId}`).addClass("fa-solid");
                var obj = {
                    ReactPointId: ReactPointId,
                    ThumbUp: ThumbUp + 1,
                    ThumbDown: ThumbDown
                };
                Submit(obj);
                Save(save);
            }
            else if ($(`#TU-${IdeaId}`).hasClass("fa-solid") == true && theLock == "") {
