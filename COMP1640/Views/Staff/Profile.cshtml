            }
        }

        function Submit(obj) {
            $.ajax({
                url: "/Staff/ReactPoint",
                method: "POST",
                data: JSON.stringify(obj),
                dataType: "json",
                contentType: 'application/json',
                success: function (data) {
                    console.log(data)
                    result = JSON.parse(data)
                    $(`#total-${result.ReactPointId}`).text(result.ThumbUp - result.ThumbDown)
                },
                error: function (err) {
                    console.log(err)
                }
            })
        }

        function Save(save) {
            $.ajax({
                url: "/Staff/React",
                method: "POST",
                data: JSON.stringify(save),
                dataType: "json",
                contentType: 'application/json',
                success: function (data) {
                    console.log(data)
                },
                error: function (err) {
                    console.log(err)
                }
            })
        }

        function Delete(save) {
            $.ajax({
                url: "/Staff/DeleteReact",
                method: "POST",
                data: JSON.stringify(save),
                dataType: "json",
                contentType: 'application/json',
                success: function () {
                },
                error: function () {
                }
            })
        }
