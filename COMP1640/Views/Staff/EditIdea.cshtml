@model Idea;
@{
    Layout = "_Staff";
    <link rel="stylesheet" href="~/css/styleIdea.css">
    ViewData["Title"] = "Edit Idea";
    Profile logginnedUser = (Profile)ViewBag.LogginedUser;
    var evt = ViewBag.Event;
}

@if (User.Identity.IsAuthenticated && User.IsInRole("Staff"))
{
    <div class="wrapper">
        <section class="post">
            <header class="row">
                <a class="col-2" href="javascript:history.back()"><img src="~/fb-icons/bx-arrow-back.svg" /></a>
                <div class="col-8">Create Idea</div>
            </header>

            <form asp-action="EditIdea" asp-controller="Staff" method="post" id="edit" enctype="multipart/form-data">
                <div class="content">
                    <img src="/Avatars/@logginnedUser.Avatar" alt="logo">
                    <div class="details">
                        <p><b>@logginnedUser.Name</b></p>
                        <div class="option" style="height: 75px;">
                            <label class="switch">
                                @if (@Model.idea_anonymous){
                                     <input type="checkbox" name="isAnonymous" value="true" checked>  @* anonymous*@
                                } else{
                                     <input type="checkbox" name="isAnonymous" value="true">  @* anonymous*@
                                }
                                <div class="slider"></div>
                                <div class="slider-card">
                                    <div class="slider-card-face slider-card-front"></div>
                                    <div class="slider-card-face slider-card-back"></div>
                                </div>
                            </label>
                            <h5>Anonymous</h5>
                        </div>
                    </div>
                </div>
                <div class="box">
                    <input type="text" name="title" placeholder="Title" value="@Model.idea_title" required />   @*title*@
                </div>
                <input type="hidden" name="ideaId" value="@Model.IdeaId"> @*ideaid*@
                <textarea form="edit" name="content" placeholder="Post content idea here..." required>@Model.idea_content</textarea>   @*content*@
                <div class="theme-emoji">
                    <img src="~/fb-icons/theme.svg" alt="theme">
                    <img src="~/fb-icons/smile.svg" alt="smile">
                </div>
                <div class="options">
                    <div class="row">
                        <input type="file" id="uploadedFiles" name="uploadedFiles" class="buttonDownload col-3"  multiple> @*file*@
                        <div class="form-group col-5">
                            <select class="form-select-category" name="categoryName" required>
                                @*category*@
                                <option style="color:white" value="">Category</option>
                                @foreach (var c in @ViewBag.Category)
                                {
                                    @if(@c.CategoryId == (@Model.CategoryId))
                                    {
                                       <option value="@c.category_name" selected>@c.category_name</option>
                                    }                                   
                                    else
                                    {
                                       <option value="@c.category_name">@c.category_name</option>
                                    }
                                }
                            </select>
                            <span class="text-danger"></span>
                        </div>
                        <div class="form-group col-4">
                            <select class="form-select-event" name="eventId" required>
                                @*event*@
                                <option style="color:white" value="">Event</option>
                                @foreach (var e in evt)
                                {
                                    @if(@e.EventId == @Model.EventId)
                                    {
                                       <option value="@e.EventId" selected>@e.EventName</option>
                                    }                                   
                                    else
                                    {
                                       <option value="@e.EventId">@e.EventName</option>
                                    }
                                  
                                }
                            </select>
                            <span class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <button type="submit">Update</button>
            </form>
        </section>
    </div>
}
