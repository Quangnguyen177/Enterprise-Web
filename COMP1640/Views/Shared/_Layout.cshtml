<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <meta character="utl-f8">
    @*    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />*@
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
          rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/site.css" />
    <script src="https://kit.fontawesome.com/1e27f03b11.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <title>Spring</title>
</head>

<body>
    <div class="app">
        <header class="header">
            <div class="logo">
                <a asp-action="" asp-controller="">
                    <img style="display: inline-block;" src="/images/logo.jpg"
                         width="100px" />
                </a>
            </div>
            <nav id="nav_bar" class="res-menu">
                <ul class="sub_nav">
                    <li class="nav_bar--item "><a style="color: #373b3f; text-decoration: none" asp-action="" asp-controller="">Home</a></li>
                    <li class="nav_bar--item "><a style="color: #373b3f; text-decoration: none" asp-action="" asp-controller="">Tags</a></li>
                    <li class="nav_bar--item "><a style="color: #373b3f; text-decoration: none" asp-action="PostIdea" asp-controller="Home">New Idea</a></li>
                </ul>
            </nav>
            <div class="header_search">
                <div class="search">
                    <form asp-controller="Book" asp-action="Search" method="POST">
                        <div class="input-group">
                            <div class="form-outline">
                                <input style="width: 250px; height: 32.5px; border-radius: 5px" type="search" id="form1" class="form-control" />
                                <label class="form-label" for="form1">Search</label>
                            </div>
                            <button type="button" class="btn btn-outline-success">
                                <i class="fas fa-search"></i>
                            </button>
                        </div>
                    </form>
                </div>
            </div>
            <div class="nav_icon">
                <ul class="menu icon">
                    <li><a style="color: #373b3f; text-decoration: none" asp-action="" asp-controller=""><i class="fa-solid fa-house"></i></a></li>
                    <li><a style="color: #373b3f; text-decoration: none" asp-action="" asp-controller=""><i class="fa-regular fa-face-grin-tongue"></i></a></li>
                    <li class="icon_account nav_bar--item--separate"><a style="color: #373b3f; text-decoration: none" asp-action="" asp-controller=""><i class="fa-solid fa-check"></i></a></li>  &nbsp &nbsp
                    <li><a style="color: #373b3f; text-decoration: none" asp-action="" asp-controller=""><i class="fa-solid fa-user"></i></a></li>
                </ul>
            </div>


            @*   <div class="avata_header">
            <figure>
            <img style="display: inline-block" src="https://tphcmtop10.com/wp-content/uploads/2022/11/hinh-avatar-cute-1.jpg"
            alt="avata" />
            </figure>
            </div>*@
        </header>

        <div class="container">
            <main role="main">
                @RenderBody()
            </main>
        </div>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @*  @RenderSection("Scripts", required: false)*@
</body>
</html>
