<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-U A-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!--Link Font-->
    <script src="https://kit.fontawesome.com/1e27f03b11.js" crossorigin="anonymous"></script>

    <!--Link bootstrap-->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>

    <!--Link Css-->
    <link rel="stylesheet" href="~/css/Dashboard.css">

    <title>Admin site</title>
</head>

<body>
    <div class="d-flex flex-column flex-lg-row bg-surface-secondary">
        <!-- Vertical Navbar -->
        <nav class="navbar show navbar-vertical h-lg-screen navbar-expand-lg px-0 py-3 navbar-light bg-light border-bottom border-bottom-lg-0 border-end-lg">
            <div class="container-fluid">
                <!-- Brand -->
                <a class="navbar-brand py-lg-3 mb-lg-5 px-lg-6 me-0" href="#">
                    <img src="https://logos.textgiraffe.com/logos/logo-name/Admin-designstyle-candy-m.png" alt="...">
                </a>
                <!-- Collapse -->
                <div class="collapse navbar-collapse" id="sidebarCollapse">
                    <!-- Navigation -->
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Admin" asp-action="Home">
                                <i class="fa fa-home"></i> Home
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Admin" asp-action="ManageAccount">
                                <i class="fa fa-pencil-square-o"></i> Manage account staff
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Admin" asp-action="ManageClosureDate">
                                <i class="fa fa-cog"></i> Setting event
                            </a>
                        </li>
                    </ul>
                    <!-- Divider -->
                    <hr class="navbar-divider my-5 opacity-20">
                    <!-- Navigation -->
                    <div class="navbar-nav">
                        <ul>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Admin" asp-action="Home" asp-route-pageNum="1" asp-route-viewType="popular">
                                    <i class="fa-solid fa-face-laugh-wink"></i>Most popular ideas
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Admin" asp-action="Home" asp-route-pageNum="1" asp-route-viewType="mostview">
                                    <i class="fa-regular fa-eye"></i>Most Viewed Ideas
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Admin" asp-action="Home" asp-route-pageNum="1" asp-route-viewType="latest">
                                    <i class="fa-regular fa-lightbulb"></i>Latest Ideas
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-action="LatestComment" asp-controller="Admin">
                                    <i class="fa-regular fa-comments"></i>Latest Comments
                                </a>
                            </li>
                        </ul>
                    </div>
                    <!-- Divider -->
                    <hr class="navbar-divider my-5 opacity-20">
                    <!-- User -->
                    <ul class="navbar-nav mb-md-4">
                        <li>
                            <a href="#" class="nav-link d-flex align-items-center">
                                <div class="me-4">
                                    <div class="position-relative d-inline-block text-white">
                                        <img alt="avatar" src="~/Avatars/@ViewBag.LogginedUser.Avatar" class="avatar rounded-circle">
                                        <span class="position-absolute bottom-2 end-2 transform translate-x-1/2 translate-y-1/2 border-2 border-solid border-current w-3 h-3 bg-danger rounded-circle"></span>
                                    </div>
                                </div>
                                <div>
                                    <span class="d-block text-sm font-semibold">
                                        @ViewBag.LogginedUser.Name
                                    </span>
                                    <span class="d-block text-xs text-muted font-regular">
                                        Admin
                                    </span>
                                </div>
                                <div class="ms-auto">
                                    <i class="fa fa-comment"></i>
                                </div>
                            </a>
                        </li>
                    </ul>
                    <!-- Push content down -->
                    <div class="mt-auto"></div>
                    <!-- User (md) -->
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <form class="nav-link" asp-area="Identity" asp-page="/Account/Logout" method="post">
                                <a class="btn_account " asp-area="Identity" asp-page="/Account/Manage/Index">Account</a>
                                &nbsp;
                                <button class="btn_logout" type="submit">Logout</button>
                            </form>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
        <!-- Main content -->
        <main role="main" class="pb-3">
            <!-- Header -->
            <header class="bg-surface-primary border-bottom pt-6">
                <div class="container-fluid">
                    <div class="mb-npx">
                        <div class="row align-items-center">
                            <div class="col-sm-6 col-12 mb-4 mb-sm-0">
                                <!-- Title -->
                                <h1 class="h2 mb-0 ls-tight">Application</h1>
                            </div>

                            @* Responsive mobile and tablet*@
                            <div class="icon_bar">
                                <label for="check" class="bar">
                                    <input id="check_icon" type="checkbox">
                                    <span class="top"></span>
                                    <span class="middle"></span>
                                    <span class="bottom"></span>
                                </label>

                            </div>
                            <input id="check" hidden type="checkbox" class="input_check">
                            <label for="check" class="overlay"></label>

                            <div class="idea_mobile">
                                <div class="all_idea_mobile">
                                    <div class="avatar_mobile nav_bar--item--separate2">
                                        <a asp-area="Identity" asp-page="/Account/Manage/Index">
                                            <img src="/Avatars/@ViewBag.LogginedUser.Avatar"
                                                 alt="avata" />
                                        </a>
                                        <span>@ViewBag.LogginedUser.Name</span>
                                    </div>
                                    <ul class="shortcuts_mobile">
                                        <li class="nav-item">
                                            <a class="nav-link" asp-controller="Admin" asp-action="Home">
                                                <i class="fa-solid fa-house"></i> Home
                                            </a>
                                        </li>
                                         <li class="nav-item">
                                            <a class="nav-link" asp-area="Identity" asp-page="/Account/Register">
                                                <i class="fa-solid fa-plus"></i>Create Account
                                            </a>
                                        </li>
                                        <li class="nav-item">
                                            <a class="nav-link" asp-controller="Admin" asp-action="ManageAccount">
                                                <i class="fa fa-pencil-square-o"></i> Manage account staff
                                            </a>
                                        </li>
                                        <li class="nav-item">
                                            <a class="nav-link" asp-controller="Admin" asp-action="ManageClosureDate">
                                                <i class="fa fa-cog"></i> Setting event
                                            </a>
                                        </li>

                                        <li class="nav-item">
                                            <a class="nav-link" asp-controller="Admin" asp-action="Home" asp-route-pageNum="1" asp-route-viewType="popular">
                                                <i class="fa-solid fa-face-laugh-wink"></i>Most popular ideas
                                            </a>
                                        </li>
                                        <li class="nav-item">
                                            <a class="nav-link" asp-controller="Admin" asp-action="Home" asp-route-pageNum="1" asp-route-viewType="mostview">
                                                <i class="fa-regular fa-eye"></i>Most Viewed Ideas
                                            </a>
                                        </li>
                                        <li class="nav-item">
                                            <a class="nav-link" asp-controller="Admin" asp-action="Home" asp-route-pageNum="1" asp-route-viewType="latest">
                                                <i class="fa-regular fa-lightbulb"></i>Latest Ideas
                                            </a>
                                        </li>
                                        <li class="nav-item">
                                            <a class="nav-link" asp-action="LatestComment" asp-controller="Admin">
                                                <i class="fa-regular fa-comments"></i>Latest Comments
                                            </a>
                                        </li>
                                        <li class="nav-item">
                                            <form class="nav-link" asp-area="Identity" asp-page="/Account/Logout" method="post">
                                                <button class="logout_mobile" submit" style="background: none; border: none; padding: 0; cursor: pointer; color: #525f7f; font-size: 1.2em;">
                                                    <i class="fa fa-sign-out"></i> Logout
                                                </button>
                                            </form>
                                        </li>
                                    </ul>
                                </div>
                            </div>

                            <!-- Actions -->
                            <div class="col-sm-6 col-12 text-sm-end">
                                <div class="mx-n1">
                                    <a class="btn d-inline-flex btn-sm btn-primary mx-1" asp-area="Identity" asp-page="/Account/Register">
                                        <span class=" pe-2">
                                            <i class="fa fa-plus-circle"></i>
                                        </span>
                                        <span>Create</span>
                                    </a>
                                </div>
                            </div>
                        </div>
                        <!-- Nav -->
                        <ul class="nav nav-tabs mt-4 overflow-x border-0">
                            <li class="nav-item ">
                                <a asp-controller="Admin" asp-action="dashboard" class="nav-link active">@ViewData["Title"]</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </header>
            @RenderBody()
        </main>
    </div>
</body>
</html>
