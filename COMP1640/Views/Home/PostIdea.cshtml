@{
    Layout = "_LayoutPostIdea";
}

<!doctype html>
<html lang="en">
<head>
    <title>Post New Idea</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css"
          integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" />


    <!-- CSS & JS-->
    <link rel="stylesheet" href="~/css/styleIdea.css">
</head>
<body>
    <div class="wrapper">
        <section class="post">
            <a href="javascript:history.back()"><img src="~/fb-icons/bx-arrow-back.svg" /></a>
            <header>Create Idea</header>

            <form action="#">
                <div class="content">
                    <img src="https://cdn-icons-png.flaticon.com/512/219/219983.png" alt="logo">
                    <div class="details">
                        <p><b>Harris</b></p>
                        <div class="option" style="height: 75px;">
                            <label class="switch">
                                <input type="checkbox">
                                <div class="slider"></div>
                                <div class="slider-card">
                                    <div class="slider-card-face slider-card-front"></div>
                                    <div class="slider-card-face slider-card-back"></div>
                                </div>
                            </label>
                            <h5>Anonymous</h5>
                        </div>
                    </div>
                </div>
                <div class="box">
                    <input type="text" placeholder="Title" required />
                </div>
                <textarea placeholder="Post new idea here..." required></textarea>
                <div class="theme-emoji">
                    <img src="~/fb-icons/theme.svg" alt="theme">
                    <img src="~/fb-icons/smile.svg" alt="smile">
                </div>
                <div class="options">
                    <button class="buttonDownload" style="height: 45px; width: 145px">Upload File</button>
                    @*<button class="buttonDownload-2" style="height: 45px; width: 110px; position: absolute;left: 46%;">
                        Tags
                    </button>*@


                    <div class="form-group" style="position: fixed; right:49%; top:525px;">
                        <select class="form-select" style="background: coral;border-radius: 10px;width: 72px; font-color:white" required>
                            <option selected disabled>Tags</option>
                           @* @foreach (var role in Roles)
                            {
                                <option value=@role.Name>@role.Name</option>
                            }*@
                        </select>
                        <span class="text-danger"></span>
                    </div>


                    <ul class="list">
                        <li><img src="~/fb-icons/gallery.svg" alt="gallery"></li>
                        @*<li><img src="~/fb-icons/tag.svg" alt="gallery"></li>*@
                        <li><img src="~/fb-icons/emoji.svg" alt="gallery"></li>
                        <li><img src="~/fb-icons/mic.svg" alt="gallery"></li>
                        <li><img src="~/fb-icons/more.svg" alt="gallery"></li>
                    </ul>
                </div>
                <button type="button" data-toggle="modal" data-target="#exampleModal">
                    Post
                </button>
            </form>
        </section>
    </div>

    <!-- Modal -->
    <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel"><b style="font-size:20px">Privacy</b></h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <input type="checkbox" required />
                    <span>I agree <a href="#">terms & conditions</a> and <a href="#">privacy policy</a></span>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-primary">Submit</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
</body>
</html>














