@{
    Layout = "_Layout";
}

<hr />

<form>
    <div class="modal-dialog" style="max-width:none">
        <div class="modal-content">
            <div class="modal-body">
                <div class="create-modal-form">
                    <div class="row mb-2 create-modal-group-header">
                        <div class="col align-items-end form-inline">
                            <div class="nav-item">
                                <h2 style="font-family: system-ui"><b>Create Idea</b></h2>
                            </div>
                        </div>
                        <div class="col-auto ">
                            <div>
                                <a class="fa fa-close" style="font-size:36px"></a>
                            </div>
                        </div>
                    </div>

                    <hr style="text-align:center; width:100%; height:50%">

                    <div class="create-post-layout">
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="scroll-gray-bg">
                                    <div style="position: relative; overflow: hidden; width: 100%; height: 591px;">
                                        <div class="create-post-view" style="position:absolute;inset:0px; overflow:scroll; margin-right:-17px; margin-bottom:-17px">
                                            <div class="modal-gray-bg">
                                                <div class="row">
                                                    <div class="col-lg-12" style="display:flex">
                                                        <div class="col-lg-12 detail-bg create-post-details p-0">
                                                            <div style="position: relative; overflow: hidden; width: 100%; height: 470px;">
                                                                <div style="position: absolute; inset: 0px; overflow: scroll; margin-right: -17px; margin-bottom: -17px;">
                                                                    <div class="create-post-zone">
                                                                        <div class="btn-group">
                                                                            <button type="button" class="btn btn-success dropdown-toggle">
                                                                                Tags
                                                                            </button>
                                                                            <ul class="dropdown-menu">
                                                                                <li><a href="">Action</a></li>
                                                                                <li><a href="">Another action</a></li>
                                                                                <li><a href="">Something else here</a></li>
                                                                            </ul>
                                                                        </div>


                                                                        <div class="form-group">
                                                                            <textarea placeholder="Type new idea here..." class="form-control" rows="10" id="comment" style="width:1000px; height:300px; position:absolute; left:50%; top:50%; transform: translate(-50%, -50%)"></textarea>

                                                                        </div>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


</form>

