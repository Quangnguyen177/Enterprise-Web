                    <figure>
                        <img src="https://tphcmtop10.com/wp-content/uploads/2022/11/hinh-avatar-cute-1.jpg"
                             alt="" />
                    </figure>
                </div>
                <div class="form_add_idea">
                    <a style="text-decoration: none" asp-action="AddIdea" asp-controller="Home">
