    Layout = "_Layout";
}


<div class="col-lg-12">
    <div class="row merged20" id="page-contents">
        <div class="sub_container col-lg-3">
            <div class="sidebar static">
                <div class="widget">
                    <h4 class="widget-title"><b> Shortcuts</b></h4>
                    <ul class="Shortcuts">
                        <li class="nav_bar--item "><a style="color: #797979; text-decoration: none" asp-action="Index" asp-controller="Home">New Feed</a></li>
                        <li class="nav_bar--item "><a style="color: #797979; text-decoration: none" asp-action="Index" asp-controller="Home">Profile</a></li>
                        <li class="nav_bar--item "><a style="color: #797979; text-decoration: none" asp-action="" asp-controller="">My page</a></li>
                        <li class="nav_bar--item "><a style="color: #797979; text-decoration: none" asp-action="PostIdea" asp-controller="Home">Logout</a></li>
                    </ul>
                </div>
                <br>
                <div class="idea">
                    <h4 class="widget-title"><b>Most Popular Ideas</b></h4>
                    <ul class="Shortcuts">
                        <li class="nav_bar--item "><a style="color: #797979; text-decoration: none" asp-action="Index" asp-controller="Home">Most Viewed Ideas</a></li>
                        <li class="nav_bar--item "><a style="color: #797979; text-decoration: none" asp-action="" asp-controller="">Latest Ideas</a></li>
                        <li class="nav_bar--item "><a style="color: #797979; text-decoration: none" asp-action="PostIdea" asp-controller="Home">Latest Comments</a></li>
                    </ul>
                </div>
            </div>
        </div>
        @*        <div class="new_idea">
        <div class="post">*@
        <div class="sub_container col-lg-6">
            <div class="new-post">
                <div class="avata_post">
                    <figure>
                        <img src="https://tphcmtop10.com/wp-content/uploads/2022/11/hinh-avatar-cute-1.jpg"
                             alt="" />
                    </figure>
                </div>
                <div class="form_add_idea">
                    <a style="text-decoration: none" asp-action="PostIdea" asp-controller="Home">
                        <div class="input_idea">
                            <input class="text" type="text" rows="2" />
                            <p style="transform: translate(20%, 30%); color: gray">write a new idea...</p>
                        </div>
                        <button type="button" class="btn btn-outline-success" asp-action="PostIdea" asp-controller="Home">Add</button>
                    </a>
                </div>
            </div>
            @* <div class="central-meta new-idea">*@
            <div class="information_idea">
                <div class="Infor_idea">
                    <div class="detail_idea nav_bar--item--separate2">
                        <div class="avata_information_idea">
                            <figure>
                                <a asp-action="index" asp-controller="HTML">
                                    <img style="width: 60px; height: 60px; border-radius: 50%; display: inline-block" src="https://tphcmtop10.com/wp-content/uploads/2022/11/hinh-avatar-cute-1.jpg"
                                         alt="avata" />
                                    <div class="name_account">
                                        <h4 style="font-size: 16px;padding-top: -600px; width: 230px">Minh Lưu Thị</h4>
                                        <h5 style="font-size: 14px;padding-top: -600px; width: 230px; color: black; margin-left: 70px">3:48 AM</h5>
                                    </div>
                                </a>
                            </figure>
                        </div>
                        @* <div>
                        <img src="~/fb-icons/more.svg" alt="gallery">

                        </div>*@
                        <div class="drop_down">
                            <a style="color: #373b3f; border-radius: 50%;" href="#" role="button" data-toggle="dropdown"
                               aria-haspopup="true" aria-expanded="false">
                                <img src="~/fb-icons/more.svg" alt="gallery">
                            </a>
                            <div class="dropdown-menu">
                                <div class="agile_inner_drop_nav_info p-4">
                                    <div class="row">
                                        <div class="col-sm-6 multi-gd-img">
                                            @*     <ul class="multi-column-dropdown">
                                            @foreach($category as $cat)
                                            <li class="hassubs"><a href="#">{{$cat->cname}}<i
                                            class="fas fa-chevron-down"></i></a>
                                            </li>
                                            @endforeach
                                            </ul>*@
                                            <ul>
                                                <li class="nav_bar--item "><a style="color: #797979; text-decoration: none" asp-action="EditIdea" asp-controller="Home">Edit</a></li>
                                                <li class="nav_bar--item "><a style="color: #797979; text-decoration: none" data-toggle="modal" data-target="#exampleModalCenter">Delete</a></li>
                                            </ul>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="content">

                            <div class="img_idea">
                                <h1 class="lead" style="transform: translate(1.4em, -0.2em); font-size: 16px">Spring is wonderful</h1>
                                @* <h1 class="Tag">@ViewBag.Tag</h1>*@
                                <div class="image_idea">
                                    <img style="width: 550px; height: 400px; padding-left: -50px; transform: translateX(-8.3%)" src="https://diachishophoa.com/uploads/noidung/images/hoasinhnhatmauxanh-1530218652.jpg"
                                         title="Image_idea" />
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="felling  nav_bar--item--separate3">
                        <div class="more">
                            <ul class="felling_idea">
                                <li><i style="color:green" class="fa-solid fa-heart"></i></li>
                                <li><i style="color:green" class="fa-regular fa-heart"></i></li>
                            </ul>
                        </div>
                    </div>

                    <div class="comment_idea">
                        <div class="com_idea_avata">
                            <figure class="avata_comment">
                                <img style="width: 60px; height: 60px; border-radius: 50%; display: inline-block" src="https://tphcmtop10.com/wp-content/uploads/2022/11/hinh-avatar-cute-1.jpg"
                                     alt="avata" />
                            </figure>
                        </div>
                        <div class="comment" style=" position: static; z-index: 5;">
                            <div class="form-group">
                                <a style="text-decoration: none">
                                    <input style="width: 450px; height: 40px" class="form-control" rows="5" id="comment" value="true" placeholder="Post your comment..." />
                                </a>
                                <label class="switch" value="true">
                                    <input type="checkbox">
                                    <div class="slider"></div>
                                    <div class="slider-card">
                                        <div class="slider-card-face slider-card-front"></div>
                                        <div class="slider-card-face slider-card-back"></div>
                                    </div>
                                </label>
                                <a asp-action="" asp-controller="">
                                    <button type="button" class="btn btn-outline-success">Add</button>
                                </a>
                            </div>
                        </div>
                    </div>

                    <div class="appear_idea">
                        <div class="ap_idea_avata">
                            <figure class="account">
                                <img src="https://tphcmtop10.com/wp-content/uploads/2022/11/hinh-avatar-cute-1.jpg"
                                     alt="avata" />
                            </figure>
                        </div>
                        <div class="info_comment">
                            @*@foreach($category as $cat)
                            <li class="hassubs"><a href="#">{{$cat->cname}}<i
                            class="fas fa-chevron-down"></i></a>
                            </li>
                            @endforeach
                            </ul>*@
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="sub_container2 col-lg-3">
            <aside class="QC">
                <div class="QC_aside">
                    <div class="col-lg-3">
                        <img src="https://lh4.googleusercontent.com/Vlh588I4xm1B3HQ_mvb_Qs1viP9sEbzjsz6S7PqGqT1Vlwgk6zP40WJ1Acsakjp9HVEVTGIAnjPOVrxjGs5VOguxqF6D3fRiNknXefNNgLM0BynE3YBUhu6z3pJrMkO3_j3dkFvR" title="QC" />
                    </div>
                    <br>
                    <div class="col-lg-3">
                        <img src="https://didongviet.vn/pub/media/catalog/product//i/p/iphone-13-pro-aar-xanh-la-didongviet_1_1.jpg"
                             title="QC" />
                    </div>
                </div>
            </aside>
        </div>
    </div>
</div>

