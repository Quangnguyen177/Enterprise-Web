            <div class="information_idea">
                <div class="Infor_idea">
                    <div class="detail_idea nav_bar--item--separate2">
                        <div class="avata_information_idea">
                            <figure>
                                <a asp-action="index" asp-controller="HTML">
                                    <img style="width: 60px; height: 60px; border-radius: 50%; display: inline-block" src="https://tphcmtop10.com/wp-content/uploads/2022/11/hinh-avatar-cute-1.jpg"
