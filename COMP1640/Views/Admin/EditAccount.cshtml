@using COMP1640.Controllers;
@using Microsoft.AspNetCore.Identity;
@model AdminController
@{
    Layout = "_LayoutEditAccountStaff";
    var Roles = ViewData["Roles"] as List<IdentityRole>;
    var Deps = ViewData["Departments"] as List<COMP1640.Models.Department>;
    ViewData["Title"] = "Edit Account";
}

@if (User.Identity.IsAuthenticated && User.IsInRole("Administrator"))
{
    <div class="container-xl px-4 mt-4">
        <div class="row">
            <form asp-controller="Admin" asp-action="EditAccount" method="post" enctype="multipart/form-data">
                <div class="col-xl-4">
                    <!--Profile picture-->
                    <div class="card mb-4 mb-xl-0">
                        <div class="card-header">Profile Picture</div>
                        <div class="card-body text-center">
                            @if (ViewBag.User.Avatar == null)
                            {
                                <img class="img-account-profile rounded-circle mb-2" src="https://pfpmaker.com/_nuxt/img/profile-3-1.3e702c5.png" alt="avatarprofile">
                            }
                            else
                            {
                                <img class="img-account-profile rounded-circle mb-2" src="/Avatars/@ViewBag.User.Avatar" alt="avatarprofile">
                            }
                            <div class="small font-italic text-muted mb-4">JPG or PNG no larger than 5 MB</div>
                            <div class="avatar-form">
                                <input class="buttonUpload" type="file" id="uploadedAva" name="uploadedAva">
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-xl-8">
                    <!--Account details-->
                    <div class="card mb-4">
                        <div class="card-header">Account Details</div>
                        <div class="card-body">
                            <!--Form Group-->
                            <div class="mb-3">
                                <input hidden class="form-control" asp-for="Input.Id" value="@ViewBag.User.Id">
                            </div>
                            <div class="mb-3">
                                <label class="small mb-1">Username</label>
                                <input class="form-control" type="text" asp-for="Input.Name" value="@ViewBag.User.Name">
                            </div>
                            <div class="mb-3">
                                <label class="small mb-1">Email</label>
                                <input class="form-control" type="email" asp-for="Input.Email" value="@ViewBag.User.Email">
                            </div>
                            <!-- Form Row-->
                            <div class="row gx-3 mb-3">
                                <div class="col-md-6">
                                    <label class="small mb-1">Phone number</label>
                                    <input class="form-control" type="tel" asp-for="Input.PhoneNumber" value="@ViewBag.User.PhoneNumber">
                                </div>
                                <div class="col-md-6">
                                    <label class="small mb-1">Date of Birth</label>
                                    <input class="form-control" type="date" asp-for="Input.DoB" value="@ViewBag.UserDoB">
                                </div>
                            </div>
                            <!-- Form Row-->
                            <div class="row gx-3 mb-3">
                                <div class="col-md-6">
                                    <label class="small mb-1">Role</label>
                                    <select class="form-select form-control" id="role" onchange="CheckAd(this)" asp-for="Input.Role">
                                        @foreach (var role in Roles)
                                        {
                                            <option value="@role.Name">@role.Name</option>
                                        }
                                    </select>
                                    <span class="text-danger" asp-validation-for="Input.Role"></span>
                                </div>

                                <div class="col-md-6">
                                    <label class="small mb-1">Department</label>
                                    <select class="form-select form-control" id="dep" asp-for="Input.DepartmentId">
                                        @foreach (var dep in Deps)
                                        {
                                            <option value="@dep.DepId">@dep.Dep_name</option>
                                        }
                                        <option value="-1" hidden disabled>Admin</option>
                                    </select>
                                    <span class="text-danger" asp-validation-for="Input.DepartmentId"></span>
                                </div>
                            </div>
                            <!--Form Group (Gender)-->
                            <div class="row">
                                <label class="small mb-1 col-2">Gender:</label>
                                <div class="gender col-2">
                                    <input id="male" type="radio" name="Gender" asp-for="Input.Gender" value="Male" />
                                    <label for="check-male">Male</label>
                                </div>
                                <div class="gender col-2">
                                    <input id="female" type="radio" name="Gender" asp-for="Input.Gender" value="Female" />
                                    <label for="check-female">Female</label>
                                </div>
                            </div>
                            <!--Save changes-->
                            <button class="btn btn-danger" type="submit">Save changes</button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
        
     <!--Reset password-->
    <div class="container-xl px-4 mt-9">
        <div class="row">
            <form asp-controller="Admin" asp-action="ResetPassword" method="post">
                <div class="card col-md-8 offset-md-4">
                    <div class="card-header">Reset Password</div>
                    <div class="card-body">
                        <div class="mb-9">
                            <input hidden class="form-control" asp-for="Input.Id" value="@ViewBag.User.Id" />
                        </div>

                        <div class="mb-3">
                            <label class="font-weight-bold">Password</label>
                            <input class="form-control" asp-for="Input.Password" placeholder="Enter new password" required>
                        </div>

                        <button type="submit" class="btn btn-success">Update</button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <script type="text/javascript">
        function hide() {
            var dep = document.getElementById('dep');
            dep.style.visibility = 'hidden';
        }
        function show() {
            var dep = document.getElementById('dep');
            dep.style.visibility = 'visible';
        }

        function CheckAd(x) {
            if (x.value == "Administrator") {
                $('#dep').val("-1");
                hide();
            }
            else {
                $('#dep').val(@ViewBag.User.DepId);
                show();
            }
        };
        $(document).ready(function () {
            //Role
            $('#role').val("@ViewBag.UserRole");
            if ("@ViewBag.UserRole" == "Administrator") {
                $('#dep').val("-1");
                hide();
            }

            //Dep
            $('#dep').val(@ViewBag.User.DepId);

            //Gender
            if ("@ViewBag.User.Gender" == "") {
                $("#male").attr("checked");
                $("#female").attr("checked");
            }
            else if ("@ViewBag.User.Gender" == "Male") {
                $("#male").attr("checked", "checked");
                $("#female").attr("checked");
            }
            else if ("@ViewBag.User.Gender" == "Female") {
                $("#male").attr("checked");
                $("#female").attr("checked", "checked");
            }
        });
    </script>
}
