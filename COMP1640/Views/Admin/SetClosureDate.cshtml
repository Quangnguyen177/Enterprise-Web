@model COMP1640.Models.Event
@{
    Layout = "_LayoutSetClosureDate";
}
@if (User.Identity.IsAuthenticated && User.IsInRole("Administrator"))
{
    <div class="container">
        <a class="back" asp-action="ManageClosureDate" asp-controller="Admin"><img src="~/fb-icons/bx-arrow-back.svg" /></a>@*href="javascript:history.back()"*@
        <div class="title">Set Closure Date</div>
        <div class="content">
            <form asp-action="SetClosureDate" asp-controller="Admin" method="post">
                <div class="user-details">
                    <div class="search" action="">
                        <input type="search" placeholder="Search title...">
                        <button type="submit">Search</button>
                    </div>
                    @*Duong code*@
                    <div class="input-box">
                        <span class="details">Event Name</span>
                        <input type="text" asp-for="EventName" required>
                    </div>
                    @*End*@
                    <div class="input-box">
                        <span class="details">First Closure Date</span>
                        <input type="date" asp-for="First_closure_date" placeholder="Enter new first closure date" required>
                    </div>
                    <div class="input-box">
                        <span class="details">Final Closure Date</span>
                        <input type="date" asp-for="Last_closure_date" placeholder="Enter new final closure date" required>
                    </div>
                </div>
                <div class="button">
                    <input type="submit" value="Save">
                </div>
            </form>
        </div>
    </div>
}