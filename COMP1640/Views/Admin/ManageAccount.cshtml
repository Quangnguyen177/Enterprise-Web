@model List<Profile>

@{
    Layout = "_LayoutManageAccount";
    var count = 1;
}

@if (User.Identity.IsAuthenticated && User.IsInRole("Administrator"))
{
    @*Main content*@
    <div class="h-screen flex-grow-1 overflow-y-lg-auto">
        <!-- Header -->
        <header class="bg-surface-primary border-bottom pt-6">
            <div class="container-fluid">
                <div class="mb-npx">
                    <div class="row align-items-center">
                        <div class="col-sm-6 col-12 mb-4 mb-sm-0">
                            <!-- Title -->
                            <h1 class="h2 mb-0 ls-tight">Application</h1>
                        </div>
                        <!-- Actions -->
                        <div class="col-sm-6 col-12 text-sm-end">
                            <div class="mx-n1">
                                <a class="btn d-inline-flex btn-sm btn-primary mx-1" asp-area="Identity" asp-page="/Account/Register">
                                    <span class=" pe-2">
                                        <i class="fa fa-plus-circle"></i>
                                    </span>
                                    <span>Create</span>
                                </a>
                            </div>
                        </div>
                    </div>
                    <!-- Nav -->
                    <ul class="nav nav-tabs mt-4 overflow-x border-0">
                        <li class="nav-item ">
                            <a asp-controller="Admin" asp-action="dashboard" class="nav-link active">All Content</a>
                        </li>
                    </ul>
                </div>
            </div>
        </header>
        <!-- Main -->
        <main class="py-6 bg-surface-secondary">
            <div class="container-fluid">
                <div class="card mb-7">
                    <div class="card-header">
                        <h5 class="mb-0">Manage account staff</h5>
                    </div>
                    <div class="table-responsive">
                        <table class="table table-hover table-nowrap">
                            <thead class="table-light">
                                <tr>
                                    <th scope="col">No.</th>
                                    <th scope="col">Email</th>
                                    <th scope="col">Name</th>
                                    <th scope="col">Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var acc in Model)
                                {
                                    <tr>
                                        <td>@count</td>
                                        <td>@acc.Email</td>
                                        <td>@acc.Name</td>
                                        <td class="text-end">
                                            <a class="btn btn-sm btn-set" asp-controller="Admin" asp-action="EditAccount" asp-route-id="@acc.Id">Edit</a>
                                        </td>
                                    </tr>
                                    count = count + 1;
                                }
                            </tbody>
                        </table>
                    </div>
                    <div class="card-footer border-0 py-5">
                        <span class="text-muted text-sm">Showing 4 account out of 100 results found</span>
                    </div>
                </div>
            </div>
        </main>
    </div>
}