<div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
            <form asp-controller="QAManager" asp-action="EditTag" method="post">
                <h1 class="display-6">Edit this Tag</h1>
                <div class="form-group">
                    <input hidden class="form-control" asp-for="@Model.CategoryId">
                    @*<span class="text-danger" asp-validation-for="@Model.TagId"></span>*@
                </div>

                <div class="form-group">
                    <label class="font-weight-bold">Title</label>
                    <input class="form-control" asp-for="@Model.category_name">
                    @*<span class="text-danger" asp-validation-for="@Model.BookTitle"></span>*@
                </div>
                <a asp-controller="QAManager" asp-action="CategoryManager"><button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button></a>
                <button type="submit" class="btn btn-success">Update</button>
            </form>

        </div>
